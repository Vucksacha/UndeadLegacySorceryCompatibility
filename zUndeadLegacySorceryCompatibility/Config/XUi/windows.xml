<window name="windowCraftingForgeFire" depth="1" size="575,524" panel="Left" cursor_area="true" controller="ULM_CraftingListInfo,UndeadLegacy">
	<background size="579,861"/>
	<rect pos="270,-383">
		<sectionHeaderSmall pos="14,-14" width="268" text_key="uiCraftingTools"/>
		<grid depth="1" name="inventory" pos="12,-45" rows="1" cols="3" cell_width="90" cell_height="90" controller="WorkstationToolGrid" repeat_content="true" allow_sort_order="false"
			required_tools="toolFireCore,toolHammerFire" required_tools_only="true">
			<ulmStack90 controller="ULM_ItemStackRequired,UndeadLegacy" name="0"/>
		</grid>
	</rect>
	<rect depth="1" name="content" pos="4,14" size="649,629" on_scroll="true">
		<label style="ulmHeaderNoIcon" text_key="xuiBasics"/>
		<ulmFavorite pos="290,-21"/>
		<ulmSearchNew pos="314,3"/>
		<grid depth="1" pos="-33,-98" name="categories" rows="13" cols="1" cell_width="58" cell_height="58" repeat_content="true" controller="CategoryList">
			<ulmCategory/>
		</grid>
		<grid depth="2" pos="9,-70" name="recipes" rows="3" cols="6" cell_width="90" cell_height="90" controller="RecipeList" repeat_content="true" arrangement="horizontal">
			<recipe_entry name="0"/>
		</grid>
		<rect pos="228,-351">
			<pager/>
			<label pos="122,-7" size="200,22" justify="right" font_size="22" text="{recipeCount}" color="160,160,160"/>
		</rect>
	</rect>
</window>

